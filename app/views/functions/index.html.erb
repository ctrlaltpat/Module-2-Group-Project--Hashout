<div class="container">
  <div class="panel-group" id="accordion">
    <% @functions.each do |f| %>
      <div class="panel panel-default" id="panel<%=f.id%>">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-target="#collapse<%=f.id%>" class="collapsed" href="#collapse<%=f.id%>">
              <%= f.topic + "_at_" + f.location.name + "_with(" + f.users_as_params + ") {" %>
            </a>
          </h4>
        </div>
        <div id="collapse<%=f.id%>" class="panel-collapse collapse in">
          <div class="panel-body">
            <p>Topic: <%= f.topic %></p>
            <p>Goals: <%= f.goals %></p>
            <p>Time: <%= f.time %></p>
            <p>Location: <%= f.location.name %></p>
            <p>Participants</p>
            <ul>
              <% f.users.each do |user| %>
                <li><%= link_to user.username, user_path(user) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>