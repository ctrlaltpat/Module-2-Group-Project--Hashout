<div class="main">
  <div class="container new_function_form">
    <% if flash[:errors] %>
    <div class="alert alert-dismissible alert-warning">
      <h4 class="alert-heading">Oops!</h4>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <% flash[:errors].each do |e| %>
        <p class="mb-0"><a href="#" class="alert-link"><%= e %></a>.</p>
      <% end %>
    </div>
    <% end %>
    <%= form_for @function do |f| %>
      <div class="form-group">
        <%= f.label :topic %>
        <%= f.text_field :topic, class: 'form-control' %>
      </div>
      <div class="form-group">
        <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
          <%= f.text_field :time, data: {target:"#datetimepicker1" }, class: "form-control datetimepicker-input" %>
          <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fas fa-calendar"></i></div>
          </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
      </div>
      <div class="form-group">
        <%= f.label :location_id, "Select a Location: "%>
        <%= f.collection_select :location_id, @locations, :id, :name, {}, {class: 'custom-select'} %>
      </div>
      <div class="form-group">
        <%= f.label :goals %>
        <%= f.text_area :goals, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :capacity, "Group Size" %>
        <%= f.number_field :capacity, min: 2, max: 10, class: 'form-control' %>
      </div>
      <%= f.hidden_field :user_id, value: @user.id %>
      <%= f.submit 'Create', class: 'form-control btn btn-primary' %>
    <% end %>
  </div>
</div>
